<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161"
    tools:context="com.example.arkantesfaymekonen.s2project.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/trueBT"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_alignBaseline="@+id/falseBT"
        android:layout_alignBottom="@+id/falseBT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="123dp"
        android:background="@drawable/yes"
        android:clickable="true"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/falseBT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTV" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_alignBaseline="@+id/scoreTV"
        android:layout_alignBottom="@+id/scoreTV"
        android:layout_marginBottom="232dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/trueBT"
        android:layout_toRightOf="@+id/trueBT"
        android:gravity="center"
        android:text="Arkan"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/trueBT"
        app:layout_constraintEnd_toStartOf="@+id/scoreTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@drawable/sun"
        android:id="@+id/scoreTV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="209dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/falseBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameTV"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/falseBT"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/nameTV"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/nameTV"
        android:layout_marginBottom="117dp"
        android:background="@drawable/no"
        android:clickable="true"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trueBT"
        app:layout_constraintTop_toBottomOf="@+id/scoreTV" />

    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/questionTv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Sample Question is presented here"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="141dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:visibility="invisible"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/answerTV"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Sample Answer is presented here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:background="@drawable/Next"
        android:id="@+id/nextBt"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="428dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>
